@model QuanLyTruongMauGiao.Models.GIAOVIEN

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #MaGV {
        background-color: #f1f1f1;
    }

    #TenTK {
        background-color: #f1f1f1;
    }
</style>
<script>
    var loadFile = function (event) {
        var image = document.getElementById("output");
        image.src = URL.createObjectURL(event.target.files[0]);
    }
</script>
@using (Html.BeginForm("Edit", "GiaoVien", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-6">
                <div class="ibox">
                    <div class="ibox-head">
                        <div class="ibox-title">Chỉnh sửa thông tin giáo viên</div>
                        <div class="ibox-tools">
                            <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
                        </div>
                    </div>
                    <div class="ibox-body">
                        <form class="form-horizontal">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" style="flex: 0 0 25%; max-width: 25%;">Mã giáo viên</label>
                                <div class="col-sm-10" style="flex: 0 0 75%; max-width: 75%;">
                                    <input id="MaGV" name="MaGV" type="text" value="@Model.MaGV" readonly />
                                </div>
                                <div class="col-sm-10 ml-sm-auto" style="flex: 0 0 75%; max-width: 75%;">
                                    @Html.ValidationMessageFor(model => model.MaGV, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" style="flex: 0 0 25%; max-width: 25%;">Tên giáo viên</label>
                                <div class="col-sm-10" style="flex: 0 0 75%; max-width: 75%;">
                                    @Html.EditorFor(model => model.TenGV, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <div class="col-sm-10 ml-sm-auto" style="flex: 0 0 75%; max-width: 75%;">
                                    @Html.ValidationMessageFor(model => model.TenGV, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" style="flex: 0 0 25%; max-width: 25%;">Ngày sinh</label>
                                <div class="col-sm-10" style="flex: 0 0 75%; max-width: 75%;">
                                    <input class="form-control" type="date" id="NgaySinh" name="NgaySinh" value="@Model.NgaySinh.ToString("yyyy-MM-dd")" />
                                </div>
                                <div class="col-sm-10 ml-sm-auto" style="flex: 0 0 75%; max-width: 75%;">
                                    @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" style="flex: 0 0 25%; max-width: 25%;">Giới tính</label>
                                <div class="col-sm-10" style="padding-top: 5px; flex: 0 0 75%; max-width: 75%;">
                                    @{
                                        if (Model.GioiTinh == true)
                                        {
                                            <input type="radio" value="true" id="GioiTinh" name="GioiTinh" checked="checked" class="radio" /> <span>Nam</span>
                                            <input type="radio" value="false" id="GioiTinh" name="GioiTinh" class="radio" /> <span>Nữ</span>

                                        }
                                        else
                                        {
                                            <input type="radio" value="true" id="GioiTinh" name="GioiTinh" class="radio" /> <span>Nam</span>
                                            <input type="radio" value="false" id="GioiTinh" name="GioiTinh" checked="checked" class="radio" /> <span>Nữ</span>
                                        }
                                    }
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" style="flex: 0 0 25%; max-width: 25%;">Quê quán</label>
                                <div class="col-sm-10" style="flex: 0 0 75%; max-width: 75%;">
                                    @Html.EditorFor(model => model.QueQuan, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <div class="col-sm-10 ml-sm-auto" style="flex: 0 0 75%; max-width: 75%;">
                                    @Html.ValidationMessageFor(model => model.QueQuan, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" style="flex: 0 0 25%; max-width: 25%;">Điện thoại</label>
                                <div class="col-sm-10" style="flex: 0 0 75%; max-width: 75%;">
                                    @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control", @type = "tel", @pattern = "[0-9]{7,}" } })
                                </div>
                                <div class="col-sm-10 ml-sm-auto" style="flex: 0 0 75%; max-width: 75%;">
                                    @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" style="flex: 0 0 25%; max-width: 25%;">Email</label>
                                <div class="col-sm-10" style="flex: 0 0 75%; max-width: 75%;">
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
                                </div>
                                <div class="col-sm-10 ml-sm-auto" style="flex: 0 0 75%; max-width: 75%;">
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" style="flex: 0 0 25%; max-width: 25%;">Loại hợp đồng</label>
                                <div class="col-sm-10" style="flex: 0 0 75%; max-width: 75%;">
                                    <select id="LoaiHopDong" name="LoaiHopDong" class="col-md-12">
                                        @if (Model.LoaiHopDong == "Hợp đồng")
                                        {
                                            <option value="Biên chế">Biên chế</option>
                                            <option value="Hợp đồng" selected>Hợp đồng</option>
                                        }
                                        else
                                        {
                                            <option value="Biên chế" selected>Biên chế</option>
                                            <option value="Hợp đồng">Hợp đồng</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-10 ml-sm-auto" style="flex: 0 0 75%; max-width: 75%;">
                                    @Html.ValidationMessageFor(model => model.LoaiHopDong, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" style="flex: 0 0 25%; max-width: 25%;">Kinh nghiệm</label>
                                <div class="col-sm-10" style="flex: 0 0 75%; max-width: 75%;">
                                    <select id="KinhNghiem" name="KinhNghiem" class="col-md-12">
                                        @switch (Model.KinhNghiem)
                                        {
                                            case "trên 5 năm":
                                                <option value="Chưa có kinh nghiệm">Chưa có kinh nghiệm</option>
                                                <option value="1 năm">1 năm</option>
                                                <option value="2 năm">2 năm</option>
                                                <option value="3 năm">3 năm</option>
                                                <option value="4 năm">4 năm</option>
                                                <option value="5 năm">5 năm</option>
                                                <option value="trên 5 năm" selected>Trên 5 năm</option>
                                                break;
                                            case "1 năm":
                                                <option value="Chưa có kinh nghiệm">Chưa có kinh nghiệm</option>
                                                <option value="1 năm" selected>1 năm</option>
                                                <option value="2 năm">2 năm</option>
                                                <option value="3 năm">3 năm</option>
                                                <option value="4 năm">4 năm</option>
                                                <option value="5 năm">5 năm</option>
                                                <option value="trên 5 năm">Trên 5 năm</option>
                                                break;
                                            case "2 năm":
                                                <option value="Chưa có kinh nghiệm">Chưa có kinh nghiệm</option>
                                                <option value="1 năm">1 năm</option>
                                                <option value="2 năm" selected>2 năm</option>
                                                <option value="3 năm">3 năm</option>
                                                <option value="4 năm">4 năm</option>
                                                <option value="5 năm">5 năm</option>
                                                <option value="trên 5 năm">Trên 5 năm</option>
                                                break;
                                            case "3 năm":
                                                <option value="Chưa có kinh nghiệm">Chưa có kinh nghiệm</option>
                                                <option value="1 năm">1 năm</option>
                                                <option value="2 năm">2 năm</option>
                                                <option value="3 năm" selected>3 năm</option>
                                                <option value="4 năm">4 năm</option>
                                                <option value="5 năm">5 năm</option>
                                                <option value="trên 5 năm">Trên 5 năm</option>
                                                break;
                                            case "4 năm":
                                                <option value="Chưa có kinh nghiệm">Chưa có kinh nghiệm</option>
                                                <option value="1 năm">1 năm</option>
                                                <option value="2 năm">2 năm</option>
                                                <option value="3 năm">3 năm</option>
                                                <option value="4 năm" selected>4 năm</option>
                                                <option value="5 năm">5 năm</option>
                                                <option value="trên 5 năm">Trên 5 năm</option>
                                                break;
                                            case "5 năm":
                                                <option value="Chưa có kinh nghiệm">Chưa có kinh nghiệm</option>
                                                <option value="1 năm">1 năm</option>
                                                <option value="2 năm">2 năm</option>
                                                <option value="3 năm">3 năm</option>
                                                <option value="4 năm">4 năm</option>
                                                <option value="5 năm" selected>5 năm</option>
                                                <option value="trên 5 năm">Trên 5 năm</option>
                                                break;
                                            default:
                                                <option value="Chưa có kinh nghiệm" selected>Chưa có kinh nghiệm</option>
                                                <option value="1 năm">1 năm</option>
                                                <option value="2 năm">2 năm</option>
                                                <option value="3 năm">3 năm</option>
                                                <option value="4 năm">4 năm</option>
                                                <option value="5 năm">5 năm</option>
                                                <option value="trên 5 năm">Trên 5 năm</option>
                                                break;
                                        }

                                    </select>
                                </div>
                                <div class="col-sm-10 ml-sm-auto" style="flex: 0 0 75%; max-width: 75%;">
                                    @Html.ValidationMessageFor(model => model.KinhNghiem, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" style="flex: 0 0 25%; max-width: 25%;">Trình độ</label>
                                <div class="col-sm-10" style="flex: 0 0 75%; max-width: 75%;">
                                    <select id="TrinhDo" name="TrinhDo" class="col-md-12">
                                        @switch (Model.TrinhDo)
                                        {
                                            case "Cao đẳng":
                                                <option value="Nghề">Nghề</option>
                                                <option value="Cao đẳng" selected>Cao đẳng</option>
                                                <option value="Đại học">Đại học</option>
                                                <option value="Thạc sĩ">Thạc sĩ</option>
                                                break;
                                            case "Đại học":
                                                <option value="Nghề">Nghề</option>
                                                <option value="Cao đẳng">Cao đẳng</option>
                                                <option value="Đại học" selected>Đại học</option>
                                                <option value="Thạc sĩ">Thạc sĩ</option>
                                                break;
                                            case "Thạc sĩ":
                                                <option value="Nghề">Nghề</option>
                                                <option value="Cao đẳng">Cao đẳng</option>
                                                <option value="Đại học">Đại học</option>
                                                <option value="Thạc sĩ" selected>Thạc sĩ</option>
                                                break;
                                            default :
                                                <option value="Nghề" selected>Nghề</option>
                                                <option value="Cao đẳng">Cao đẳng</option>
                                                <option value="Đại học">Đại học</option>
                                                <option value="Thạc sĩ">Thạc sĩ</option>
                                                break;
                                        }
                                    </select>
                                </div>
                                <div class="col-sm-10 ml-sm-auto" style="flex: 0 0 75%; max-width: 75%;">
                                    @Html.ValidationMessageFor(model => model.TrinhDo, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" style="flex: 0 0 25%; max-width: 25%;">Chuyên ngành</label>
                                <div class="col-sm-10" style="flex: 0 0 75%; max-width: 75%;">
                                    <select id="ChuyenNganh" name="ChuyenNganh" class="col-md-12">
                                        @switch (Model.ChuyenNganh)
                                        {
                                            case "Tiểu học":
                                                <option value="Mầm non">Mầm non</option>
                                                <option value="Tiểu học" selected>Tiểu học</option>
                                                <option value="Trung học cơ sở">Trung học cơ sở</option>
                                                <option value="Trung học phổ thông">Trung học phổ thông</option>
                                                break;
                                            case "Trung học cơ sở":
                                                <option value="Mầm non">Mầm non</option>
                                                <option value="Tiểu học">Tiểu học</option>
                                                <option value="Trung học cơ sở" selected>Trung học cơ sở</option>
                                                <option value="Trung học phổ thông">Trung học phổ thông</option>
                                                break;
                                            case "Trung học phổ thông":
                                                <option value="Mầm non">Mầm non</option>
                                                <option value="Tiểu học">Tiểu học</option>
                                                <option value="Trung học cơ sở">Trung học cơ sở</option>
                                                <option value="Trung học phổ thông" selected>Trung học phổ thông</option>
                                                break;
                                            default:
                                                <option value="Mầm non" selected>Mầm non</option>
                                                <option value="Tiểu học">Tiểu học</option>
                                                <option value="Trung học cơ sở">Trung học cơ sở</option>
                                                <option value="Trung học phổ thông">Trung học phổ thông</option>
                                                break;
                                        }

                                    </select>
                                </div>
                                <div class="col-sm-10 ml-sm-auto" style="flex: 0 0 75%; max-width: 75%;">
                                    @Html.ValidationMessageFor(model => model.ChuyenNganh, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" style="flex: 0 0 25%; max-width: 25%;">Loại tốt nghiệp</label>
                                <div class="col-sm-10" style="flex: 0 0 75%; max-width: 75%;">
                                    <select id="LoaiTotNghiep" name="LoaiTotNghiep" class="col-md-12">
                                        @switch (Model.ChuyenNganh)
                                        {
                                            case "Khá":
                                                <option value="Giỏi">Giỏi</option>
                                                <option value="Khá" selected>Khá</option>
                                                <option value="Trung bình">Trung bình</option>
                                                break;
                                            case "Trung bình":
                                                <option value="Giỏi">Giỏi</option>
                                                <option value="Khá">Khá</option>
                                                <option value="Trung bình" selected>Trung bình</option>
                                                break;
                                            default:
                                                <option value="Giỏi" selected>Giỏi</option>
                                                <option value="Khá">Khá</option>
                                                <option value="Trung bình">Trung bình</option>
                                                break;
                                        }

                                    </select>
                                </div>
                                <div class="col-sm-10 ml-sm-auto" style="flex: 0 0 75%; max-width: 75%;">
                                    @Html.ValidationMessageFor(model => model.LoaiTotNghiep, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" style="flex: 0 0 25%; max-width: 25%;">Tên tài khoản</label>
                                <div class="col-sm-10" style="flex: 0 0 75%; max-width: 75%;">
                                    <input type="text" id="TenTK" name="TenTK" value="@Model.MaGV" readonly class="form-control" />
                                </div>
                                <div class="col-sm-10 ml-sm-auto" style="flex: 0 0 75%; max-width: 75%;">
                                    @Html.ValidationMessageFor(model => model.TenTK, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" style="flex: 0 0 25%; max-width: 25%;">Ảnh</label>
                                <div class="col-md-10" style="flex: 0 0 75%; max-width: 75%;">
                                    <input class="form-control" id="anh" name="anh" type="text" value="@Model.Anh" hidden="hidden" />
                                    <input type="file" id="InputImage" name="InputImage" onchange="loadFile(event)" />
                                    <br />
                                    <br />
                                    <img id="output" alt="anh" width="135" height="135" src="~/Image/GiaoVien/@Model.Anh" />
                                </div>
                                <div class="col-sm-10 ml-sm-auto" style="flex: 0 0 75%; max-width: 75%;">
                                    @Html.ValidationMessageFor(model => model.Anh, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row" style="flex: 0 0 75%; max-width: 75%;">
                                <div class="col-sm-10 text-danger">
                                    @ViewBag.msg
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-10 ml-sm-auto" style="flex: 0 0 75%; max-width: 75%;">
                                    <button class="btn btn-info" type="submit">Lưu</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>
