@model QuanLyTruongMauGiao.Models.THUCDONNGAY

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <div class="row">
            <div class="col-md-6">
                <div class="ibox">
                    <div class="ibox-head">
                        <div class="ibox-title">Bạn có chắc muốn xóa thực đơn?</div>
                        <div class="ibox-tools">
                            <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
                        </div>
                    </div>
                    <div class="ibox-body">
                        <form class="form-horizontal">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" style="padding-top: 0">Mã</label>
                                <div class="col-sm-10">
                                    @Html.DisplayFor(model => model.MaTDN)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" style="padding-top: 0">Ngày</label>
                                <div class="col-sm-10">
                                    @Html.DisplayFor(model => model.Ngay)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" style="padding-top: 0">Bữa sáng</label>
                                <div class="col-sm-10">
                                    @Html.DisplayFor(model => model.BuaSang)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" style="padding-top: 0">Bữa trưa</label>
                                <div class="col-sm-10">
                                    @Html.DisplayFor(model => model.BuaTrua)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" style="padding-top: 0">Bữa xế</label>
                                <div class="col-sm-10">
                                    @Html.DisplayFor(model => model.BuaXe)
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-10 ml-sm-auto">
                                    <button class="btn btn-info" type="submit">Xóa</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Quay lại", "Index")
</div>