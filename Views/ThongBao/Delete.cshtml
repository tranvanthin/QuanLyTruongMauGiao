@model QuanLyTruongMauGiao.Models.THONGBAO
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-danger" style="padding-top: 0">@ViewBag.Error</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-6">
            <div class="ibox">
                <div class="ibox-head">
                    <div class="ibox-title">Bạn có chắc muốn xóa thông báo?</div>
                    <div class="ibox-tools">
                        <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
                    </div>
                </div>

                <div class="ibox-body">
                    <form class="form-horizontal">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label" style="flex: 0 0 25%; max-width: 25%; padding-top: 0">Mã thông báo</label>
                            <div class="col-sm-10" style="flex: 0 0 75%; max-width: 75%;">
                                @Html.DisplayFor(model => model.MaTB)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label" style="flex: 0 0 25%; max-width: 25%; padding-top: 0">Ngày tạo</label>
                            <div class="col-sm-10" style="flex: 0 0 75%; max-width: 75%;">
                                @Html.DisplayFor(model => model.NgayTB)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label" style="flex: 0 0 25%; max-width: 25%; padding-top: 0">Tên thông báo</label>
                            <div class="col-sm-10" style="flex: 0 0 75%; max-width: 75%;">
                                @Html.DisplayFor(model => model.TenTB)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label" style="flex: 0 0 25%; max-width: 25%; padding-top: 0">Nội dung</label>
                            <div class="col-sm-10" style="flex: 0 0 75%; max-width: 75%;">
                                @Html.DisplayFor(model => model.NoiDung)
                            </div>
                        </div>
                        <div class="text-danger" style="padding-top: 0">@ViewBag.Error</div>
                        <div class="form-group row">
                            <div class="col-sm-10 ml-auto" style="padding-left: 60px;">
                                <button class="btn btn-info" type="submit">Xóa</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
}
<p>
   @Html.ActionLink("Quay lại", "Index")
</p>

