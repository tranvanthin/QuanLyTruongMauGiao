@model QuanLyTruongMauGiao.Models.TAIKHOAN

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <div class="ibox">
            <div class="ibox-head">
                <div class="ibox-title">Chi tiết tài khoản</div>
                <div class="ibox-tools">
                    <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
                </div>
            </div>
            <div class="ibox-body">
                <form class="form-horizontal">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" style="padding-top: 0; flex: 0 0 20%; max-width: 20%;">Tài khoản</label>
                        <div class="col-sm-10" style="flex: 0 0 80%; max-width: 80%;">
                            @Html.DisplayFor(model => model.TenTK)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" style="padding-top: 0; flex: 0 0 20%; max-width: 20%;">Mật khẩu</label>
                        <div class="col-sm-10" style="flex: 0 0 80%; max-width: 80%;">
                            @{ 
                                string mk = new string('*', Model.MatKhau.Length);
                                    }
                            @mk
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" style="padding-top: 0; flex: 0 0 20%; max-width: 20%;">Phân quyền</label>
                        <div class="col-sm-10" style="flex: 0 0 80%; max-width: 80%;">
                            @Html.DisplayFor(model => model.PhanQuyen)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" style="padding-top: 0; flex: 0 0 20%; max-width: 20%;">Ảnh đại diện</label>
                        <div class="col-sm-10" style="flex: 0 0 80%; max-width: 80%;">
                            <img src="~/Image/Profile/@Model.AnhDaiDien" height="200" width="200" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10 ml-sm-auto" style="flex: 0 0 80%; max-width: 80%;">
                            @Html.ActionLink("Sửa", "Edit", new { id = Model.TenTK })
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Quay lại", "Index")
</p>