@model QuanLyTruongMauGiao.Models.NOIDUNGDANHGIA

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/LayoutGV.cshtml";
}

<style>
    input:read-only {
        background-color: #f1f1f1;
    }
</style>
@using (Html.BeginForm("Edit", "NoiDungDanhGias", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-6">
                <div class="ibox">
                    <div class="ibox-head">
                        <div class="ibox-title">Sửa nội dung đánh giá</div>
                        <div class="ibox-tools">
                            <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
                        </div>
                    </div>
                    <div class="ibox-body">
                        <form class="form-horizontal">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" style="flex: 0 0 20%; max-width: 20%;">Mã nội dung</label>
                                <div class="col-sm-10" style="flex: 0 0 80%; max-width: 80%;">
                                    <input type="text" id="MaNDDG" name="MaNDDG" value="@Model.MaNDDG" readonly />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" style="flex: 0 0 20%; max-width: 20%;">Nội dung</label>
                                <div class="col-sm-10" style="flex: 0 0 80%; max-width: 80%;">
                                    <textarea cols="50" id="NoiDungDanhGia1" name="NoiDungDanhGia1" rows="4">@Model.NoiDungDanhGia1</textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-10 ml-sm-auto">
                                    <div class="text-danger">
                                        @ViewBag.Error
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-10 ml-sm-auto" style="padding-left: 35px;">
                                    <button class="btn btn-info" type="submit">Lưu</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>
