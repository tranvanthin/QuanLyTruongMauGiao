@using QuanLyTruongMauGiao.Models;
@{
    TAIKHOAN user = Session["user"] as TAIKHOAN;
    if(user.PhanQuyen == "Quản lý")
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else if(user.PhanQuyen == "Giáo viên")
    {
        Layout = "~/Views/Shared/LayoutGV.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/LayoutPH.cshtml";
    }
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-6">
                <div class="ibox" style="width: 50%">
                    <div class="ibox-head">
                        <div class="ibox-title">Thay đổi mật khẩu</div>
                        <div class="ibox-tools">
                            <a class="ibox-collapse"><i class="fa fa-minus"></i></a>   
                        </div>
                    </div>
                    <div class="ibox-body">
                        <form>
                            <div class="form-group">
                                <label>Mật khẩu hiện tại:</label>
                                <div class="input-group-icon right">
                                    <div class="input-icon"><i class="fa fa-lock font-16"></i></div>
                                    <input class="form-control" type="password" name="password_old">
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Mật khẩu mới:</label>
                                <div class="input-group-icon right">
                                    <div class="input-icon"><i class="fa fa-lock font-16"></i></div>
                                    <input class="form-control" type="password" name="password_new1">
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Nhập lại mật khẩu mới:</label>
                                <div class="input-group-icon right">
                                    <div class="input-icon"><i class="fa fa-lock font-16"></i></div>
                                    <input class="form-control" type="password" name="password_new2">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="text-danger">@ViewBag.Error</label>
                                <label>@ViewBag.msg</label>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-10 ml-sm-auto">
                                    <button class="btn btn-info" type="submit">Sửa</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

