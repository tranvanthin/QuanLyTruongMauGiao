@model QuanLyTruongMauGiao.Models.PHIEUTHUTIEN
@using QuanLyTruongMauGiao.Models;
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/LayoutPH.cshtml";
    QLMauGiao db = new QLMauGiao();
}
