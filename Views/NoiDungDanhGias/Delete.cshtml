@model QuanLyTruongMauGiao.Models.NOIDUNGDANHGIA

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/LayoutGV.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <div class="row">
            <div class="col-md-6">
                <div class="ibox">
                    <div class="ibox-head">
                        <div class="ibox-title">Bạn có chắc muốn xóa nội dung?</div>
                        <div class="ibox-tools">
                            <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
                        </div>
                    </div>
                    <div class="ibox-body">
                        <div class="ibox-title, text-danger" style="padding-top: 0">@ViewBag.Error</div>
                        <form class="form-horizontal">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" style="flex: 0 0 20%; max-width: 20%;">Mã nội dung</label>
                                <div class="col-sm-10" style="flex: 0 0 80%; max-width: 80%;">
                                    @Html.DisplayFor(model => model.MaNDDG)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label" style="flex: 0 0 20%; max-width: 20%;">Nội dung</label>
                                <div class="col-sm-10" style="flex: 0 0 80%; max-width: 80%;">
                                    @Html.DisplayFor(model => model.NoiDungDanhGia1)
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-10 ml-sm-auto">
                                    <button class="btn btn-info" type="submit">Xóa</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Quay lại", "Index")
</div>