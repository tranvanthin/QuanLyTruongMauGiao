@model QuanLyTruongMauGiao.Models.THUCDONNGAY

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    input:read-only {
        background-color: #f1f1f1;
    }
</style>
@using (Html.BeginForm("Create", "ThucDon", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-md-6">
            <div class="ibox">
                <div class="ibox-head">
                    <div class="ibox-title">Tạo thực đơn</div>
                    <div class="ibox-tools">
                        <a class="ibox-collapse"><i class="fa fa-minus"></i></a>
                    </div>
                </div>
                <div class="ibox-body">
                    <form class="form-horizontal">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Mã</label>
                            <div class="col-sm-10">
                                <input type="text" id="MaTDN" name="MaTDN" value="@ViewBag.MaTDN" readonly />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Ngày</label>
                            <div class="col-sm-10">
                                <input type="date" id="Ngay" name="Ngay" />
                            </div>
                            <div class="col-sm-10 ml-sm-auto">
                                @Html.ValidationMessageFor(model => model.Ngay, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Bữa sáng</label>
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.BuaSang, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col-sm-10 ml-sm-auto">
                                @Html.ValidationMessageFor(model => model.BuaSang, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Bữa trưa</label>
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.BuaTrua, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col-sm-10 ml-sm-auto">
                                @Html.ValidationMessageFor(model => model.BuaTrua, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Bữa xế</label>
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.BuaXe, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="col-sm-10 ml-sm-auto">
                                @Html.ValidationMessageFor(model => model.BuaXe, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10 text-danger">
                                @ViewBag.msg
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10 ml-sm-auto">
                                <button class="btn btn-info" type="submit">Thêm</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>
